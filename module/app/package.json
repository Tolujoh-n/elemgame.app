{
  "name": "app",
  "version": "1.0.0-alpha.1",
  "type": "module",
  "scripts": {
    "dev": "vite --mode localhost --host",
    "build": "tsc && vite build --mode production",
    "preview": "vite preview --mode localhost",
    "lint": "eslint src && prettier --check src",
    "format": "prettier --write src && eslint src --fix"
  },
  "dependencies": {
    "@fontsource/jetbrains-mono": "^5.1.0",
    "@pixi/layout": "^2.0.1",
    "@pixi/ui": "^2.1.5",
    "@twa-dev/sdk": "^7.10.1",
    "@twa-dev/types": "^7.10.0",
    "gsap": "^3.12.5",
    "pixi.js": "^8.4.1"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@rollup/plugin-replace": "^6.0.1",
    "eslint": "^8.57.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.10.0",
    "prettier": "^3.1.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.8.0",
    "vite": "^5.4.1",
    "vite-plugin-static-copy": "^1.0.6"
  }
}
